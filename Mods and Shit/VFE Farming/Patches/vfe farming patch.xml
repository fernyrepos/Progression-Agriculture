<?xml version="1.0" encoding="utf-8"?>
<Patch>
  
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Vanilla Factions Expanded - Tribals</li>
    </mods>
    <match Class="PatchOperationRemove">
      <success>Always</success>
      <xpath>Defs/ThingDef[defName="VFE_PlanterBox" or defName="VFE_PlanterBox_Tilable"]/researchPrerequisites/li[text()="VFET_Cultivation"]</xpath>
    </match>
  </Operation>
  
    <Operation Class="PatchOperationReplace">
      <xpath>/Defs/ResearchProjectDef[defName="VFE_Res_FarmingTechniques"]/label</xpath>
      <value>
        <label>Scarecrow</label>
      </value>
    </Operation>

    <Operation Class="PatchOperationReplace">
      <xpath>/Defs/ResearchProjectDef[defName="VFE_Res_FarmingTechniques"]/description</xpath>
      <value>
        <description>Build a primitive humanoid figure capable of scaring off small animals.</description>
      </value>
    </Operation>

</Patch>